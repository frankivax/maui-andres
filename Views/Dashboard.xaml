<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto.Views.Dashboard"
             Title="Dashboard"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#04ADBF">
    <VerticalStackLayout>
        <Label x:Name="lblUsuario"
        FontSize="25"
        HorizontalTextAlignment="Center"
               TextColor="White"
               FontAttributes="Bold"
               Margin="0,10,0,0"/>

        <Image Source="https://cdn.pixabay.com/photo/2021/11/30/09/20/car-repair-6834873_1280.png"
       MaximumWidthRequest="250"/>

        <Button x:Name="btnInsertarVehiculo"
         Text="Ingresar vehiculo a reparar"
          Clicked="btnInsertarVehiculo_Clicked"
          BackgroundColor="#314E59"
              FontAttributes="Bold"
                 Margin="20,0,20,0"/>

        <Image Source="https://www.netlife.ec/wp-content/uploads/2020/12/icono-agenda-over.png"
MaximumWidthRequest="250"/>
        <Button x:Name="btnCita"
        Text="Solicitar Cita"
         Clicked="btnCita_Clicked"
         BackgroundColor="#314E59"
         FontAttributes="Bold"
                 Margin="20,0,20,0"/>    


    </VerticalStackLayout>
</ContentPage>